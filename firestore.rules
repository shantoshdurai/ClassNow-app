rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to announcements
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow read access to the timetable hierarchy
    match /departments/{departmentId} {
      allow read: if true;
      
      // Allow years directly under departments (Previous simple structure)
      match /years/{yearId} {
        allow read: if true;
        
        match /sections/{sectionId} {
          allow read: if true;
          
          match /schedule/{scheduleId} {
            allow read: if true;
            allow write: if request.auth != null;
          }
          
          match /announcements/{msgId} {
            allow read: if true;
            allow write: if request.auth != null;
          }
        }
      }
    }
    
    // Keep user profiles secure
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
