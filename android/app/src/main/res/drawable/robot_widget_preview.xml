<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A0A0A"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>
    
    <!-- Left Eye -->
    <item android:top="40dp" android:left="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
    
    <!-- Right Eye -->
    <item android:top="40dp" android:right="30dp" android:gravity="top|end">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
    
    <!-- NEXT label -->
    <item android:top="95dp" android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="#38BDF8"/>
            <corners android:radius="4dp"/>
            <size android:width="50dp" android:height="14dp"/>
        </shape>
    </item>
    
    <!-- Time text -->
    <item android:top="115dp" android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="#9CA3AF"/>
            <corners android:radius="3dp"/>
            <size android:width="40dp" android:height="10dp"/>
        </shape>
    </item>
    
    <!-- Refresh icon (top right) -->
    <item android:top="10dp" android:right="10dp" android:gravity="top|end">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#4B5563"/>
            <size android:width="16dp" android:height="16dp"/>
        </shape>
    </item>
</layer-list>
